# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space

[{*.js,*.jsx,*.ts,*.tsx,*.mjs,*.cjs}]
indent_size = 4

[{tsconfig.json,tsconfig_*.json}]
indent_size = 4

[*.md]
indent_size = 4

[.circleci/**.yml]
indent_size = 4

[.github/workflows/**.yml]
indent_size = 2

[Makefile]
indent_style = tab
